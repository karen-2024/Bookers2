
<div class="row">
  
  <div class="col-md-3">
    <!--ユーザー　詳細-->
    <%= render 'users/list', user: @user %>
    
    <!--Book　新規投稿-->
    <%= render 'books/post', book: Book.new %>
  </div>

  <div class="col-md-8 offset-md-1">
    <!--user 詳細-->
    <h2>Books</h2>
    
    <table class="table">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <p><%= book.title %></p>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>