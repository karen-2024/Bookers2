
<!--ユーザー詳細-->
<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(80,80) %>
  <p>name<%= @user.name %></p>
  <p>introduction<%= @user.introduction %></p>
  
  <% if @user == current_user %>
    <p><%= link_to "edit", edit_user_path(@user) %></p>
  <% end %>
</div>


<h1>Users</h1>
<!--ユーザー一覧-->
<% @books.each do |book| %>
<div>
  <p>image <%= image_tag book.user.get_profile_image(80,80) %></p>
  <p>name <%= book.title %></p>
 
  <td><%= link_to "Show", new_book_path(current_user.id) %></td>
  
</div>
<% end %>