
<div class="container">
  <div class="row">
    <table class="table table-striped">
      
      <div class="col-md-3">
        <!--User 編集-->
        <h1>User info</h1>
        
        <%= form_with model: @user do |f| %>
          <p>
            <label for="inputName">Name</label><br>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
          </p>
          <p>
            <label for="inputImage">Image</label><br>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </p>
          <p>
            <label for="inputIntroduction">Introduction</label><br>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"説明"%>
          </p>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
          
        <% end %>
      </div>
      
    </table>
  </div>
</div>
