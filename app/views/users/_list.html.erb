
<!--カレントユーザー　詳細-->
<h1>User info</h1>

  <p><%= image_tag user.get_profile_image(80,80) %></p>
  
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
    
  <% if @user == current_user %>
    <p><%= link_to "edit", edit_user_path(@user), class: "btn btn-outline-secondary" %></p>
  <% end %>
  