<div class="row">
  
  <div class="col-md-3">
    <!--カレントユーザー　詳細-->
    <%= render 'users/list', user: current_user %>
    
    <!--Book　新規投稿-->
    <%= render 'books/post', book: Book.new %>
  </div>
  
  
  <div class="col-md-8 offset-md-1">
    <!--User　一覧-->
    <h2>Users</h2>
    
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.name %></td>
            
            <!--User 詳細ページ-->
            <td><%= link_to "Show", user_path(current_user.id) %></td>
          </tr>
        <% end %>
      <tbody>
    </table>
  </div>
  
</div>