
<div class="container">
  <div class="row">
    
    <div class="col-lg-3">
      <!--カレントユーザー　詳細-->
      
      
      <!--Book　新規投稿-->
      <%= render 'books/post', book: Book.new %>
    </div>


    <div class="col-lg-8">
      <!--User　一覧-->
      <h1>Users</h1>
        
      <table class="table">
        <thead>
          <tr>
            <th><strong>image</strong></th>
            <th><strong>name</strong></th>
            <th colspan="3"></th>
          </tr>
        </thead>
          
        <tbody>
          <% @user.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= @user.name %></td>
            
              <!--User 詳細ページ-->
              <td><%= link_to "Show", user_path(current_user.id) %></td>
            </tr>
          <% end %>
        <tbody>
      </div>
      
    </table>
  </div>
</div>