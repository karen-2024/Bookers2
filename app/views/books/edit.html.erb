
<div class="container">
  <div class="row">
    <table class="table table-striped">
      
      <div class="col-lg-3">
        <!--Book 編集-->
        <h1>Editing Book</h1>
        
        <%= form_with model: @book do |f| %>
        
          <p>Title</p>
          <%= f.text_field :title %>
          
          <p>Opinion</p>
          <%= f.text_area :body %>
          <br>
          <%= f.submit 'Update Book' %>
        <% end %>
          
        <%= link_to "Show", book_path %> |
        <%= link_to "Back", '/books' %>
      </div>
      
    </table>
  </div>
</div>