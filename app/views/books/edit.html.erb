
<div class="container">
  <div class="row">
   
      <div class="mx-auto col-11 col-sm-10 col-m-8 col-xl-6">
        <!--Book 編集-->
        <h2>Editing Book</h2>
        
        <!--エラーメッセージ-->
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        
        
        <%= form_with model: @book do |f| %>
        
          <p>Title</p>
          <%= f.text_field :title %>
          
          <p>Opinion</p>
          <%= f.text_area :body %>
          <br>
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        <% end %>
        
        <br>
        <%= link_to "Show", book_path %> |
        <%= link_to "Back", '/books' %>
      </div>
      
  </div>
</div>