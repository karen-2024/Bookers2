
<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
      
    <div class="col-md-3">
      <!--カレントユーザー　詳細-->
      <%= render 'users/list', user: current_user %>
      
      
      <!--Book　新規投稿-->
      <%= render 'books/post', book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <!--Book　詳細-->
      <h2>Book detail</h2>
        
        <table class="table">
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
              <p><%= link_to @book.user.name, user_path(current_user.id) %></p>
            </td>
            
            <td><%= link_to @book.title, book_path %></td>
            <td><%= @book.body %></td>
            
            <!--編集、削除リンク-->
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </table>
      </div>
       
  </div>
</div>