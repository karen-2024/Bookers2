
<div class="container">
  <div class="row">
      
    <div class="col-lg-3">
      <!--カレントユーザー　詳細-->
      <%= render 'users/list', user: current_user %>
      
      
      <!--Book　新規投稿-->
      <%= render 'books/post', book: Book.new %>
    </div>

    <div class="col-lg-8">
      <!--Book　詳細-->
      <h1>Book detail</h1>
        
        <table class="table">
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(80,80) %>
              <p><%= link_to @book.user.name %></p>
            </td>
            
            <td><%= link_to @book.title, book_path %></td>
            <td><%= @book.body %></td>
            
            <!--編集、削除リンク-->
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "destroy", book_path(@book), method: :delete %></td>
            <% end %>
          </tr>
        </table>
      </div>
       
  </div>
</div>