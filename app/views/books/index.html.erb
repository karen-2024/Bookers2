
<div class="container">
  
  <!--エラーメッセージ-->
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="row">
    
    
    <div class="col-md-3">
      <!--カレントユーザー　詳細-->
      <%= render 'users/list', user: current_user %>
      
      <!--Book　新規投稿-->
      <%= render 'books/post', book: Book.new %>
    </div>


    <div class="col-md-8 offset-md-1">
      <!--Book　一覧-->
      <h2>Books</h2>
        
      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th><strong>Title</strong></th>
            <th><strong>Opinion</strong></th>
          </tr>
        </thead>
          
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <p><%= book.title %></p>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
        
      </table>
    </div>
      
  </div>
</div>